# NPM Configuration for proxy environments
# Disable strict SSL for corporate proxies
strict-ssl=false

# Registry settings
registry=https://registry.npmjs.org/

# Disable proxy for npm
proxy=false
https-proxy=false
noproxy=true

# Increase timeout for slow connections
fetch-timeout=60000
fetch-retries=5

# Legacy peer deps for compatibility
legacy-peer-deps=true

# Engine strict mode off
engine-strict=false
