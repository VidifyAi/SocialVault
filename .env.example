# SocialVault Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE (MongoDB Atlas - Free Tier)
# ============================================
# 1. Go to https://www.mongodb.com/cloud/atlas
# 2. Create a free cluster
# 3. Get your connection string and replace below
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/socialvault?retryWrites=true&w=majority"

# ============================================
# CLERK AUTHENTICATION (Free Tier Available)
# ============================================
# 1. Go to https://clerk.com
# 2. Create an application
# 3. Copy your keys from the API Keys section
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# ============================================
# RAZORPAY PAYMENTS
# ============================================
# 1. Go to https://dashboard.razorpay.com
# 2. Sign up and get your API keys from Settings > API Keys
# 3. For testing, use Test Mode keys
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# ============================================
# AWS S3 FILE UPLOADS
# ============================================
# 1. Go to AWS Console > S3 and create a bucket
# 2. Create an IAM user with S3 access
# 3. For local testing, you can use LocalStack or MinIO
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="ap-south-1"
S3_BUCKET="socialvault-uploads"
# Optional: For S3-compatible services like MinIO, Cloudflare R2, DigitalOcean Spaces
S3_ENDPOINT=""

# ============================================
# RESEND EMAIL SERVICE
# ============================================
# 1. Go to https://resend.com
# 2. Create an account (free tier: 3000 emails/month)
# 3. Get your API key from the dashboard
# 4. Verify your domain for production use
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="SocialVault <noreply@yourdomain.com>"

# ============================================
# APPLICATION URLS
# ============================================
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV="development"
